        <Label layoutX="200.0" layoutY="29.0" text="Création Partie">
            <font>
                <Font name="Italianate Regular" size="42.0" />
            </font>
        </Label>
        <VBox layoutX="514.0" layoutY="113.0" prefHeight="200.0" prefWidth="126.0">
            <children>
                <Label opacity="0.83" prefHeight="19.0" prefWidth="127.0" style="-fx-background-color: #20120F;" text="Joueurs présents" textFill="#ffc300">
                    <font>
                        <Font name="../fonts/Italianate Regular" size="15.0" />
                    </font>
                </Label>
                <ListView fx:id="listeJoueurs" opacity="0.83" prefHeight="181.0" prefWidth="133.0" style="-fx-background-color: #20120F;" />
            </children>
        </VBox>
        <Button layoutX="250.0" layoutY="333.0" mnemonicParsing="false" opacity="0.81" prefHeight="54.0" prefWidth="200.0" style="-fx-background-color: #ffc300;" text="CREER LA PARTIE">
            <font>
                <Font name="Italianate Regular" size="17.0" />
            </font>
        </Button>
        <Button layoutX="526.0" layoutY="317.0" minHeight="18.0" mnemonicParsing="false" onAction="#SuppressionJoueurBouton" prefHeight="32.0" prefWidth="102.0" style="-fx-background-color: #ffc300;" text="Supprimer">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
      <Button fx:id="retour" layoutX="624.0" layoutY="360.0" mnemonicParsing="false" onAction="#RetourBouton" style="-fx-background-color: #ffc300;" text="Retour">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
    </children>
</AnchorPane>
